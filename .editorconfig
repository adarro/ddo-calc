root = true

[*]
charset = utf-8
end_of_line = crlf
insert_final_newline = false
indent_style = space
indent_size = 4

[{*.avro, *.json, *.avsc}]
indent_style = space
indent_size = 2

[*.feature]
indent_style = space
indent_size = 2

[{*.kt, *.kts}]
indent_size = 4


[{*.scala, *.sc}]
indent_style = space
indent_size = 4

[{.scalafix.config, *.conf}]
indent_style = space
indent_size = 2

[/.vs/**]
charset = unset
end_of_line = unset
insert_final_newline = unset
indent_style = unset
indent_size = unset

[**/resources/*]
charset = unset
end_of_line = unset
insert_final_newline = unset
indent_style = unset
indent_size = unset
